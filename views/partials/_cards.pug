.cards
    if cards
        each card in cards
            .card
                .img-container.card-img-top
                    if(card.discount)
                        .corner-banner
                            span.discount -#{card.discount}%
                    img(src='images/'+ card.image + '.jpg', alt=card.place)
                    .img-text
                        span.top-text #{card.place}
                        span.bottom-text #{card.days} días / #{card.nights} noches
                        if(card.AI)
                            span.banner Todo Incluido
                .card-block
                    if(card.from)
                        p
                            i.from
                            b  #{card.from}
                    if(card.flight)
                        p
                            i.plane
                            | #{card.flight}
                            b  #{card.flightCompany}
                    if(card.hotel)
                        p
                            i.bed
                            | #{card.hotel}
                            span(class="star " +card.stars)
                    if(card.car)
                        p
                            i.car
                            | #{card.car}
                    if(card.transport)
                        p
                            i.transport
                            | #{card.transport}
                footer.card-footer
                    .price
                        span.text
                            | desde
                        span.amount
                            | #{card.price}€
                    button.btn Reservar
